<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#DCA39595"
                android:endColor="#F55F5C5C"
                android:angle="270" />

            <corners android:radius="8dp" />

            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />

            <stroke
                android:color="#A0A0A0"
                android:width="1dp" />

            <corners android:radius="8dp" />

            <solid android:color="#FDDAD5D5" />

            <size
                android:width="300dp"
                android:height="48dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp" />

            <gradient
                android:startColor="#D0D0D0"
                android:endColor="#FFFFFF"
                android:angle="270" />

            <corners android:radius="8dp" />

            <solid android:color="#31FFFFFF" />

            <stroke
                android:color="#A0A0A0"
                android:width="1dp" />
        </shape>
    </item>
</selector>
